<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <EditTextPreference
            android:key="nickname"
            android:title="닉네임"
            android:summary="닉네임을 설정하세요."/>

        <EditTextPreference
            android:key="tall"
            android:title="신장(cm)"
            android:summary="신장을 입력하세요."/>

        <EditTextPreference
            android:key="weight"
            android:title="몸무게(kg)"
            android:summary="몸무게를 입력하세요."/>

        <EditTextPreference
            android:key="water_day"
            android:title="하루 목표 수분량"
            android:summary="하루 목표 수분량을 설정하세요."/>

        <MultiSelectListPreference
            android:key="necessity"
            android:title="필요 성분"
            android:summary="필요성분들을 설정하세요."
            android:entries="@array/necessity"
            android:entryValues="@array/necessity"/>

</PreferenceScreen>